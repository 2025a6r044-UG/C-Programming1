#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    char str[100];
    int count=0,flag=0;
    gets(str);
    for(int i=0;i<strlen(str);i++){
        if(isalpha(str[i])){
            if(flag==0){
                count++;
                flag=1;
            }
        }
        else{
                flag=0;
            }
    }
    printf("%d",count);
    return 0;
}

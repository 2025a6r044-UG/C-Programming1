#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
struct student{
    int rollno;
    char name[100];
    struct marks{
        int math,sci,eng,com;
        }marks;
};
int main(){
    int n;
    scanf("%d",&n);
    struct student s1[n];
    for(int i=0;i<n;i++){
        scanf("%d ",&s1[i].rollno);
        scanf("%[^\n]%*c",s1[i].name);
        scanf("%d",&s1[i].marks.math);
        scanf("%d",&s1[i].marks.sci);
        scanf("%d",&s1[i].marks.eng);
        scanf("%d",&s1[i].marks.com);
    }
    int max=0,index=-1;
    for(int i=0;i<n;i++){
        int total;
        total = s1[i].marks.math+s1[i].marks.sci+s1[i].marks.eng+s1[i].marks.com;
        if(total>=max){
            max=total;
            index=i;
        }
    }
        printf("Topper Details:\n");
        printf("Roll No: %d\n",s1[index].rollno);
        printf("Name: %s\n",s1[index].name);
        printf("Total Marks: %d\n",max);  
    return 0;
}

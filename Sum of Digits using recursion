//WAP to find sum of digits in a number using recursion
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int sumOfDigits(int n){
    int sum=0,i;
    if(n==0)
        return n;
    else{
        i=n%10;
        n=n/10;
        sum = i+sumOfDigits(n);
    }
    return sum;
}
int main() {
    int num,a;
    scanf("%d",&num);
    a = sumOfDigits(num);
    printf("%d",a);
    return 0;
}

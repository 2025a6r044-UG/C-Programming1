#include<stdio.h>
int main(){
  int a,b,*ptr2,*ptr1;
      ptr1=&a;
      ptr2=&b;
      printf("Enter two numbers:");
      scanf("%d %d",ptr1,ptr2);
      printf("Before swapping: a=%d,b=%d\n",*ptr1,*ptr2);
      *ptr1=*ptr1+*ptr2;
      *ptr2=*ptr1-*ptr2;
      *ptr1=*ptr1-*ptr2;
      printf("After swapping: a=%d,b=%d",*ptr1,*ptr2);
return 0;
}

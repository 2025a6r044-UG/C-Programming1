#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
struct Rectangle{
    int length;
    int width;
};
int getArea(struct Rectangle r1){
    return r1.length*r1.width;
}
int getPerimeter(struct Rectangle r){
    return 2*(r.length + r.width);
}
int main() {
    struct Rectangle r;
    scanf("%d\n",&r.length);
    scanf("%d",&r.width);
    int a=getArea(r);
    int b=getPerimeter(r);
    printf("Area: %d\nPerimeter: %d",a,b);
    return 0;
}
